<div class="col-md-4 col-md-offset-4" id="connection-table">
	<table class="table table-bordered table-hover record-detail">
		<tr>
			<th colspan="2">Record ID: <%= @user.id %></th>
		</tr>
		<!-- Basic System Information -->
		<tr>
			<th class="sub-title" colspan="2">Basic System Information</th>
		</tr>
		<tr>
			<td>OS</td>
			<td><%= @user.operating_system %></td>
		</tr>
		<tr>
			<td>Browser</td>
			<td><%= @user.browser %></td>
		</tr>
		<!-- Connection -->
		<tr>
			<th class="sub-title" colspan="2">Connection</th>
		</tr>
		<tr>
			<td>IP Address</td>
			<td><%= @user.ip_address %></td>
		</tr>
		<!-- Browser Capability -->
		<tr>
			<th class="sub-title" colspan="2">Browser Capability</th>
		</tr>
		<tr>
			<td>Cookies</td>
			<td><%= @user.cookies %></td>
		</tr>
		<tr>
			<td>JavaScript</td>
			<td><%= @user.javascript %></td>
		</tr>
		<tr>
			<td>HTML5 Support</td>
			<td><%= @user.html5_support %></td>
		</tr>
		<tr>
			<td>CSS3 Support</td>
			<td><%= @user.css3_support %></td>
		</tr>
		<!-- Plugins -->
		<tr>
			<th class="sub-title" colspan="2">Plugins</th>
		</tr>
		<tr>
			<td>Cookies</td>
			<td><%= @user.cookies %></td>
		</tr>
		<tr>
			<td>JavaScript</td>
			<td><%= @user.javascript %></td>
		</tr>
		<tr>
			<td>HTML5 Support</td>
			<td><%= @user.html5_support %></td>
		</tr>
		<tr>
			<td>CSS3 Support</td>
			<td><%= @user.css3_support %></td>
		</tr>
	</table>
</div>
