<div class="text-center">
	<h1>Customer List</h1>
</div>

<div class="col-md-6 col-md-offset-3">
	<table class="table table-striped table-bordered", id="company-list">
		<thead>
			<tr>
				<th>Customer</th>
				<th># of Users</th>
				<th>Latest Entry</th>
			</tr>
		</thead>
		<tbody>
		<% @company_info.each do |company_info| %>
			<tr>
				<td><a href="/users?c=<%="#{company_info[0]}&page=1"%>"><%=company_info[0]%></a></td>
				<td><%=company_info[1]%></td>
				<td><%=company_info[2]%></td>
			</tr>
		<% end %>
		</tbody>
	</table>
</div>

